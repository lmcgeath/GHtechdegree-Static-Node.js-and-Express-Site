extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div 
      h1 My Portfolio
      
      p.lead.text-light
        | This is a collection of the projects I have completed. Kick off your shoes and stay for a while.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

  each item in projects
    .cell
      a(href=`/project/${item.id}`)
        img.thumbnail(src=item.image_urls[0])
        h5 #{item.project_name}
      
